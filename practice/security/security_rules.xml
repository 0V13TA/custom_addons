<odoo>
  <data noupdate="1">
    <record id="rule_student_own_profile" model="ir.rule">
      <field name="name">Student: Own Profile Only</field>
      <field name="model_id" ref="model_practice_student" />
      <field name="groups" eval="[(4, ref('practice.group_student'))]" />
      <field name="domain_force">[('partner_id.id', '=', user.partner_id.id)]</field>
    </record>

    <record id="rule_student_own_classroom" model="ir.rule">
      <field name="name">Student: Own Classroom Only</field>
      <field name="model_id" ref="model_practice_classroom" />
      <field name="groups" eval="[(4, ref('practice.group_student'))]" />
      <field name="domain_force">[('student_ids.partner_id.id', '=', user.partner_id.id)]</field>
    </record>

    <record id="rule_teacher_own_profile" model="ir.rule">
      <field name="name">Teacher: Own Profile Only</field>
      <field name="model_id" ref="model_practice_teacher" />
      <field name="groups" eval="[(4, ref('practice.group_teacher'))]" />
      <field name="domain_force">[('partner_id.id', '=', user.partner_id.id)]</field>
    </record>
  </data>
</odoo>
