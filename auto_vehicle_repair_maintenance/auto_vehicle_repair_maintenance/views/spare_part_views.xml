<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Spare Part Tree View -->
        <record id="view_spare_part_tree" model="ir.ui.view">
            <field name="name">auto.vehicle.repair.spare.part.tree</field>
            <field name="model">auto.vehicle.repair.spare.part</field>
            <field name="arch" type="xml">
                <list string="Spare Parts" decoration-muted="not active">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="vehicle_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="available_quantity"/>
                    <field name="location_id"/>
                    <field name="unit_price"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Spare Part Form View -->
        <record id="view_spare_part_form" model="ir.ui.view">
            <field name="name">auto.vehicle.repair.spare.part.form</field>
            <field name="model">auto.vehicle.repair.spare.part</field>
            <field name="arch" type="xml">
                <form string="Spare Part">
                    <header>
                        <button name="action_sync_with_inventory" string="Sync with Inventory" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Spare Part Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="vehicle_id" options="{'no_create': False}"/>
                                <field name="product_id" options="{'no_create': False}"/>
                                <field name="location_id" options="{'no_create': False}"/>
                            </group>
                            <group>
                                <field name="quantity"/>
                                <field name="available_quantity" readonly="1"/>
                                <field name="min_quantity"/>
                                <field name="max_quantity"/>
                                <field name="unit_price"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" nolabel="1" placeholder="Additional notes about this spare part..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Spare Part Search View -->
        <record id="view_spare_part_search" model="ir.ui.view">
            <field name="name">auto.vehicle.repair.spare.part.search</field>
            <field name="model">auto.vehicle.repair.spare.part</field>
            <field name="arch" type="xml">
                <search string="Search Spare Parts">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="vehicle_id"/>
                    <field name="product_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Low Stock" name="low_stock" domain="[('quantity', '&lt;=', 'min_quantity'), ('min_quantity', '&gt;', 0)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Vehicle" name="group_vehicle" context="{'group_by': 'vehicle_id'}"/>
                        <filter string="Location" name="group_location" context="{'group_by': 'location_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Spare Part Action -->
        <record id="action_spare_part" model="ir.actions.act_window">
            <field name="name">Spare Parts</field>
            <field name="res_model">auto.vehicle.repair.spare.part</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_spare_part_search"/>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>

