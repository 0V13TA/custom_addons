<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Workshop Manager Group -->
        <record id="group_workshop_manager" model="res.groups">
            <field name="name">Workshop Manager</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="comment">Full access to all vehicle repair and maintenance operations. Can approve quotations, assign mechanics, and finalize jobs.</field>
        </record>

        <!-- Mechanic/Technician Group -->
        <record id="group_mechanic" model="res.groups">
            <field name="name">Mechanic / Technician</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="comment">Can perform inspections, update job progress, and mark work done. Cannot approve quotations.</field>
        </record>

        <!-- Receptionist Group -->
        <record id="group_receptionist" model="res.groups">
            <field name="name">Receptionist / Front Desk</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="comment">Can create vehicle and customer records, register new jobs and inspections, print quotations.</field>
        </record>
    </data>
</odoo>

