<odoo>
    <record id="view_project_structure_list" model="ir.ui.view">
        <field name="name">h_jubran.project.structure.global.list</field>
        <field name="model">h_jubran.project.structure.global</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="stage_number"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_project_structure_form" model="ir.ui.view">
        <field name="name">h_jubran.project.structure.global.form</field>
        <field name="model">h_jubran.project.structure.global</field>
        <field name="arch" type="xml">
            <form string="Project Structure">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="stage_number" required="1"/>
                        <field name="description"/>
                    </group>

                    <notebook>
                        <page string="Stages &amp; Elements">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="stage_id"/>
                                    <field name="element_ids" widget="many2many_tags"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_structure" model="ir.actions.act_window">
        <field name="name">Project Structures</field>
        <field name="res_model">h_jubran.project.structure.global</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
