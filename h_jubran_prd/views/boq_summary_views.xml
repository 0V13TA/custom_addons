<odoo>
    <data>

        <record id="action_h_jubran_boq_summary" model="ir.actions.act_window">
            <field name="name">BOQ Summaries</field>
            <field name="res_model">h_jubran.boq.summary</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
        </record>

        <record id="view_h_jubran_boq_summary_tree" model="ir.ui.view">
            <field name="name">h_jubran.boq.summary.tree</field>
            <field name="model">h_jubran.boq.summary</field>
            <field name="arch" type="xml">
                <list string="BOQ Summaries">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="total_amount"/>
                    <field name="total_actual_amount"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <record id="view_h_jubran_boq_summary_form" model="ir.ui.view">
            <field name="name">h_jubran.boq.summary.form</field>
            <field name="model">h_jubran.boq.summary</field>
            <field name="arch" type="xml">
                <form string="BOQ Summary" on_write="action_refresh_scope_summary">
                    <header>
                        <button name="action_import_lines"
                                type="object"
                                string="Import Lines"
                                class="btn-primary"
                                icon="fa-upload"/>
                    </header>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_scope_tree"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-folder"
                                context="{'default_summary_id': id}">
                            <field name="scope_count" widget="statinfo" string="Scopes"/>
                        </button>
                        <button name="action_view_category_tree"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-sitemap"
                                context="{'default_summary_id': id}">
                            <field name="category_count" widget="statinfo" string="Categories"/>
                        </button>
                    </div>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="project_id"/>
                            </group>
                            <group>
                                <field name="currency_id"/>
                                <field name="total_amount" readonly="1"/>
                                <field name="total_actual_amount" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                        <notebook>
                            <page string="BOQ Lines">
                                <button name="action_refresh_scope_summary" 
                                        string="Refresh Scope Summary" 
                                        type="object" 
                                        class="btn-secondary"/>
                                <field name="scope_summary_ids">
                                    <list editable="bottom" create="1" delete="1">
                                        <field name="scope"/>
                                        <field name="amount"/>
                                        <field name="actual_amount"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_h_jubran_boq_summary_line_tree" model="ir.ui.view">
            <field name="name">h_jubran.boq.summary.line.tree</field>
            <field name="model">h_jubran.boq.summary.line</field>
            <field name="arch" type="xml">
                <list string="BOQ Lines">
                    <field name="summary_id"/>
                    <field name="number"/>
                    <field name="code"/>
                    <field name="scope"/>
                    <field name="category_id"/>
                    <field name="subcategory_id"/>
                    <field name="element_id"/>
                    <field name="amount"/>
                    <field name="actual_amount"/>
                    <field name="purchase_order_line_ids" widget="many2many_tags" optional="hide"/>
                </list>
            </field>
        </record>
        
        <record id="view_h_jubran_boq_summary_line_form" model="ir.ui.view">
            <field name="name">h_jubran.boq.summary.line.form</field>
            <field name="model">h_jubran.boq.summary.line</field>
            <field name="arch" type="xml">
                <form string="BOQ Summary Line">
                    <sheet>
                        <group>
                            <group>
                                <field name="summary_id"/>
                                <field name="number"/>
                                <field name="code"/>
                                <field name="scope"/>
                            </group>
                            <group>
                                <field name="category_id"/>
                                <field name="subcategory_id"/>
                                <field name="element_id"/>
                            </group>
                        </group>
                        <group>
                            <group string="Planned">
                                <field name="quantity"/>
                                <field name="rate"/>
                                <field name="amount"/>
                            </group>
                            <group string="Actual (Auto-updated from Purchase Orders)">
                                <field name="actual_quantity"/>
                                <field name="actual_rate"/>
                                <field name="actual_amount"/>
                            </group>
                        </group>
                        <group string="Linked Purchase Orders">
                            <field name="purchase_order_line_ids" nolabel="1">
                                <list>
                                    <field name="order_id"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal"/>
                                </list>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_h_jubran_boq_summary_category_tree" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="res_model">h_jubran.boq.summary.category.tree</field>
            <field name="view_mode">list</field>
            <field name="context">{'default_summary_id': active_id}</field>
        </record>

        <record id="view_h_jubran_boq_summary_category_tree" model="ir.ui.view">
            <field name="name">h_jubran.boq.summary.category.tree</field>
            <field name="model">h_jubran.boq.summary.category.tree</field>
            <field name="arch" type="xml">
                <list string="Sub-Categories" 
                      default_order="category_id, sequence"
                      editable="bottom"
                      create="0">
                    <field name="category_id"/>
                    <field name="name" string="Sub Category"/>
                    <field name="quantity"/>
                    <field name="actual_quantity"/>
                    <field name="rate"/>
                    <field name="actual_rate"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="actual_amount" sum="Total Actual Amount"/>
                    <field name="subcategory_id" column_invisible="1"/>
                    <field name="is_category" column_invisible="1"/>
                    <field name="is_subcategory" column_invisible="1"/>
                    <field name="currency_id" column_invisible="1"/>
                </list>
            </field>
        </record>

        <record id="action_h_jubran_boq_summary_scope_tree" model="ir.actions.act_window">
            <field name="name">Scopes</field>
            <field name="res_model">h_jubran.boq.summary.scope.tree</field>
            <field name="view_mode">list</field>
            <field name="context">{'default_summary_id': active_id}</field>
        </record>

        <record id="view_h_jubran_boq_summary_scope_tree" model="ir.ui.view">
            <field name="name">h_jubran.boq.summary.scope.tree</field>
            <field name="model">h_jubran.boq.summary.scope.tree</field>
            <field name="arch" type="xml">
                <list string="Scopes" 
                      default_order="parent_path, sequence"
                      editable="bottom"
                      create="0">
                    <field name="scope"/>
                    <field name="name" string="Category"/>
                    <field name="code"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="actual_amount" sum="Total Actual Amount"/>
                    <field name="category_id" optional="hide" column_invisible="1"/>
                    <field name="parent_id" optional="hide" column_invisible="1"/>
                    <field name="parent_path" optional="hide" column_invisible="1"/>
                    <field name="is_scope" optional="hide" column_invisible="1"/>
                    <field name="is_category" optional="hide" column_invisible="1"/>
                    <field name="currency_id" optional="hide" column_invisible="1"/>
                </list>
            </field>
        </record>

        <menuitem id="menu_h_jubran_boq_summary_root"
                  name="BOQ Summary"
                  parent="menu_h_jubran_project_root"
                  sequence="12"
                  action="action_h_jubran_boq_summary"/>
    </data>
</odoo>

