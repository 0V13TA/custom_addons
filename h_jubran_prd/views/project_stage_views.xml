<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_h_jubran_project_stage_global" model="ir.actions.act_window">
        <field name="name">Global Project Stages</field>
        <field name="res_model">h_jubran.project.stage.global</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List view -->
    <record id="view_h_jubran_project_stage_global_list" model="ir.ui.view">
        <field name="name">h_jubran.project.stage.global.list</field>
        <field name="model">h_jubran.project.stage.global</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Global Project Stages" sample="1">
                <field name="name"/>
                <field name="code" readonly="1"/>
                <field name="is_active" widget="toggle_button"/>
                <field name="is_sub_stage" invisible="0"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_h_jubran_project_stage_global_form" model="ir.ui.view">
        <field name="name">h_jubran.project.stage.global.form</field>
        <field name="model">h_jubran.project.stage.global</field>
        <field name="arch" type="xml">
            <form string="Global Project Stage">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g., Foundation, Superstructure"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_stage_id"/>
                            <field name="code"/>
                            <field name="is_sub_stage" invisible="1"/>
                        </group>
                        <group>
                            <field name="is_active" widget="toggle_button"/> 
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_h_jubran_project_stage_global_search" model="ir.ui.view">
        <field name="name">h_jubran.project.stage.global.search</field>
        <field name="model">h_jubran.project.stage.global</field>
        <field name="arch" type="xml">
            <search string="Search Project Stages">
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active_filter" domain="[('is_active','=',True)]"/>
            </search>
        </field>
    </record>

</odoo>
