<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action -->
    <record id="action_h_jubran_project_element_global" model="ir.actions.act_window">
        <field name="name">Global Project Elements</field>
        <field name="res_model">h_jubran.project.element.global</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List view -->
    <record id="view_h_jubran_project_element_global_list" model="ir.ui.view">
        <field name="name">h_jubran.project.element.global.list</field>
        <field name="model">h_jubran.project.element.global</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Global Project Elements" sample="1">
                <field name="name"/>
                <field name="code" readonly="1"/>
                <field name="is_active" widget="toggle_button"/>
                <field name="description" optional="hidden"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_h_jubran_project_element_global_form" model="ir.ui.view">
        <field name="name">h_jubran.project.element.global.form</field>
        <field name="model">h_jubran.project.element.global</field>
        <field name="arch" type="xml">
            <form string="Global Project Element">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g., Excavation, Rebar, Masonry"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" readonly="0"/>
                        </group>
                        <group>
                            <field name="is_active" widget="toggle_button"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
